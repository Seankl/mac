<% remote_form_for @quote, :url => calculate_quotes_path do |f|%>
<%- flash[:error].each do | msg| -%>
  <%= content_tag :div, msg %>
<%- end if flash[:error] -%>

<table>
<tr>
<td valign="top" class="four-border">
    <table width="100%" cellspacing="0" cellpadding="0" border="0">
        <tbody>
            <tr>
                <td class="productimagetext" colspan="2">
                    Please keep clicking until you find your <span id="producttype">Laptop</span>
                </td>
            </tr>
            <tr>
                <td align="center">
                    <%= collection_select :quote, :computer_id, Computer.laptops, :id, :name, {}, {:class => "box", :classname => "box"} %>
										<%= observe_field :quote_computer_id, :url => {:action => :computer_changed}, :with => "'id=' + value" -%>
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td width="42%">
                    <table width="100%" cellspacing="0" cellpadding="0" border="0">
                        <tr>
                            <td align="center" width="23%">
                                &nbsp;
                            </td>
                            <td align="center" width="49%">
                                <center>
                                	<%= image_tag "#{@computer.name}.jpg", :id => "photo" -%>
                                </center>
                            </td>
                            <td align="center" width="28%">
                                &nbsp;
                            </td>
                        </tr>
                        <tr>
                            <td id="computer_name" align="center" class="heading" colspan="3">
                           	  <%= @computer.name -%>
                            </td>
                        </tr>
                    </table>
                </td>
                <td width="58%" valign="top">
                    <table align="center" width="95%" cellspacing="2" cellpadding="2" border="0">
                        <tbody>
                            <tr>
                                <td>
                                  <%= collection_select :quote, :processor_id, @computer.processors, :id, :name, {:prompt => "Processor Speed"},{ :classname => "box", :class => "box"} -%>
                                </td>
                                <td>
                                  <%= collection_select :quote, :disk_id, @computer.disks, :id, :name, {:prompt => "Hard Disk size"},{ :class => "box", :classname => "box" } %>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                  <%= collection_select :quote, :ram_id, @computer.rams, :id, :name, {:prompt => "Ram installed"},{ :class => "box", :classname => "box" } %>
                                </td>
                                <td>
                                  <%= collection_select :quote, :grade_id, Grade.all, :id, :name, {:prompt => "Its condition"}, {:class => "box", :classname => "box"} %>
                                </td>
                            </tr>
                            <tr>
                                <td align="right" style="padding-right: 20px;" colspan="2">
                                    <table width="100%" cellspacing="0" cellpadding="0" border="0">
                                        <tr>
                                            <td align="left" width="67%">
                                                <a class="grade-text" onclick="javascript:window.open()" href="#">
                                                    <u>
                                                        Click to see how to find this information
                                                    </u>
                                                </a>
                                            </td>
                                            <td align="right" width="33%">
                                                <a class="grade-text" onclick="javascript:window.open()" href="#">
                                                    <u>
                                                        more about grades
                                                    </u>
                                                </a>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td class="form-text" colspan="2">
                                    <strong>What accessories does your computer come with?</strong>
                                </td>
                            </tr>
                            <tr>
                                <td valign="top" class="form-text">
                                    <%= f.check_box "box" %>Original Box 
                                    <br>
                                    <%= f.check_box "cable" %>Charging Cable 
                                    <br>
                                    <%= f.check_box "adapter" %>Power Adapter
                                    <br>
                                    <%= f.check_box "media" %>Original install disks
                                    <br>
                                </td>
                                <td valign="top" class="form-text">
                                    <%= f.check_box "manual" %>User Manuals
                                    <br>
                                    <%= f.check_box "mouse" %>Mouse
                                    <br>
                                    <%= f.check_box "keyboard" %>Keyboard
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    &nbsp;
                                </td>
                                <td>
                                    &nbsp;
                                </td>
                            </tr>
                            <tr>
                                <td>
                                	 <%= link_to_function image_tag("back.jpg", :size => "184x28", :border => "0"), shuffle(:contract => ["laptop_body"], :expand => "mac_body") -%>
                                </td>
                                <td>
                                   <%= link_to_remote image_tag("how-much-is-it-worth.jpg", :size => "184x28", :border => "0"), :url => {:action => "calculate"}, :with => "Form.serialize($('new_quote'))" -%>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</td>
</tr>
</table>
<% end %>