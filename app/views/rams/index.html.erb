<% title "Rams" %>

<table>
  <tr>
    <th>Name</th>
    <th>Size</th>
  </tr>
  <% for ram in @rams %>
    <tr>
      <td><%=h ram.name %></td>
      <td><%=h ram.size %></td>
      <td><%= link_to "Show", ram %></td>
      <td><%= link_to "Edit", edit_ram_path(ram) %></td>
      <td><%= link_to "Destroy", ram, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Ram", new_ram_path %></p>
