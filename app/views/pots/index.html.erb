<% title "Pots" %>

<table>
  <tr>
    <th>Model</th>
    <th>Value</th>
    <th>Limit</th>
  </tr>
  <% for pot in @pots %>
    <tr>
      <td><%=h pot.computer.name %></td>
      <td><%=h pot.value %></td>
      <td><%=h pot.limit %></td>
      <td><%= link_to "Show", pot %></td>
      <td><%= link_to "Edit", edit_pot_path(pot) %></td>
      <td><%= link_to "Destroy", pot, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Pot", new_pot_path %></p>
