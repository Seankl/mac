<% form_for @pot do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.select :computer_id, Computer.all.map{|c| [ c.name, c.id ] }, :include_blank => "Select a model" %>
  </p>
  <p>
    <%= f.label "How much to put in the pot" %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.label "No longer offer to buy when the remainder is less than this" %><br />
    <%= f.text_field :cap %>
  </p>
    <p>
      <%= f.label "Remaining funds" %><br />
      <%= f.text_field :remainder %>
    </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
